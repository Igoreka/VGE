<Window x:Class="VectorGraphicEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VectorGraphicEditor"
        mc:Ignorable="d"
        Title="Редактор векторной графики" Height="450" MinHeight="400" Width="800" MinWidth="400" Icon=".\Rastr\logo.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Name="btnSelect" ToolTip="Редактирование" Height="40" Width="40" Margin="10 10 10 10">
                <DockPanel>
                    <Image Source=".\Rastr\arrow.png"/>
                </DockPanel>
            </Button>
            <Button Name="btnAddLine" ToolTip="Добавление новой ломанной линии" Height="40" Width="40" Margin="10 10 10 10">
                <DockPanel>
                    <Image Source=".\Rastr\brokenline.png"/>
                </DockPanel>
            </Button>
            <Button Name="btnLineThickness"  ToolTip="Изменить толщину" Height="40" Width="40" Margin="10 10 10 10">
                <DockPanel>
                    <Image Source=".\Rastr\linethickness.png"/>
                </DockPanel>
            </Button>
            <Button Name="btnLineColor"  ToolTip="Изменить цвет" Height="40" Width="40" Margin="10 10 10 10">
                <DockPanel>
                    <Image Source=".\Rastr\changecolor.png"/>
                </DockPanel>
            </Button>
            <Button Name="btnSaveToFile"  ToolTip="Сохранить в файл" Height="40" Width="40" Margin="10 10 10 10">
                <DockPanel>
                    <Image Source=".\Rastr\savetofile.png"/>
                </DockPanel>
            </Button>
            <Button Name="btnLoadFromFile"  ToolTip="Загрузить из файла" Height="40" Width="40" Margin="10 10 10 10">
                <DockPanel>
                    <Image Source=".\Rastr\loadfromfile.png"/>
                </DockPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
